<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Usuarios Registrados</h6>
  </div>
  <div class="pt-3 pl-3">
    <a href="users/add" class="btn btn-success .btn-circle btn-sm mr-auto">
      <span class="icon text-white-50">
        <i class="fas fa-check"></i>
      </span>
      <span class="text">Adicionar</span>
    </a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Cédula</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>usuario</th>
            <th>Tipo Usuario</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tfoot>
          <tr>
            <th>Cédula</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>usuario</th>
            <th>Tipo Usuario</th>

            <th>Acciones</th>
          </tr>
        </tfoot>
        <tbody>
          {{#each usuarios}}
          <tr>
            <td>{{number_id}}</td>
            <td>{{name}}</td>
            <td>{{lastname}}</td>
            <td>{{username}}</td>
            <td>{{tipo_users}}</td>
              <td>
                <a class="btn btn-warning btn-sm" href="/users/edit/{{id}}">
                  <span class="icon text-white-50" ><i class="fas fa-check"></i></span>
                  <span class="text" class="d-inline-block" tabindex="0" data-placement="top" title="Editar"> </span>
                </a>
                <a class="btn btn-danger btn-sm" href="/users/delete/{{id}}">
                  <span class="icon text-white-50 d-inline-block" tabindex="0" data-placement="top" title="Eliminar"><i
                      class="fas fa-trash" data-toggle="tooltip"> </i> </span>
                  <span class="text"> </span>
                </a>
              </td>
            </td>
          </tr>
          {{/each}}
        </tbody>

      </table>

    </div>
  </div>
</div>