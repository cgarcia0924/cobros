<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Administrar Negocios!</h1>
  <div class="pt-3 pl-3">
    <a href="/bussiness/add" class="btn btn-success .btn-circle btn-sm mr-auto">
      <span class="icon text-white-50">
        <i class="fas fa-check"></i>
      </span>
      <span class="text">Adicionar</span>
    </a>
  </div>
  <p class="mb-4"></p> <!-- Margen Inicial  -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Adiministrar Negocios</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
          <thead>
            <tr>
              <th>Id</th>
              <th>Nombre Negocio</th>
              <th>Oficina</th>
              <th>Fecha Ingreso</th>
              <th>Usuario</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each bussiness}}
            <tr>
              <td>{{id}}</td>
              <td>{{bnames}}</td>
              <td>{{office}}</td>
              <td>{{timeago date}}</td>
              <td>{{name}} {{lastname}}</td>              
              <td>
                <a class="btn btn-warning btn-sm" href="/bussiness/edit/{{id}}">
                  <span class="icon text-white-50" ><i class="fas fa-check"></i></span>
                  <span class="text" class="d-inline-block" tabindex="0" data-placement="top" title="Editar">Editar  </span>
                </a>
                <a class="btn btn-danger btn-sm" href="/bussiness/delete/{{id}}">
                  <span class="icon text-white-50 d-inline-block" tabindex="0" data-placement="top" title="Eliminar"><i
                      class="fas fa-trash" data-toggle="tooltip"> </i> </span>
                  <span class="text"> Eliminar</span>
                </a>
              </td>
            </tr>
            {{/each}}

          </tbody>
          <tfoot>
            <tr>
              <th>Id</th>
              <th>Nombre Negocio</th>
              <th>Oficina</th>
              <th>Fecha Ingreso</th>
              <th>Usuario</th>
              <th>Acciones</th>
            </tr>
          </tfoot>
        </table>

      </div>
    </div>
  </div>
</div>