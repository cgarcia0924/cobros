<div class="container">
      
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Crear Oficina</h1>
                        </div>
                        <form class="user" action="/office/add" method="POST">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label class="label label-default">Nombre oficina:</label>
                                    <input type="text" class="form-control" name="names"
                                         required>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <label class="label label-default">Dirección:</label>
                                    <input type="text" class="form-control" name="address"
                                         required>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label class="label label-default">Ciudad:</label>
                                <select name="city_id" class="custom-select col-sm-12">
                                    {{#each office}}
                                    <option value="{{id}}">{{nombre}}</option>
                                    {{/each}}

                                </select>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <label class="label label-default">Teléfono / Celular:</label>
                                    <input type="text" class="form-control" name="number_cel"
                                        id="number_cel"  required>
                                </div>
                                <div class="col-sm-6">
                                    <label class="label label-default">Responsable:</label>
                                    <input type="text" class="form-control" name="responsable"
                                        id="responsable"  required>
                                </div>
                            </div>
                            <hr>
                            <div class="row">



                                <div class="col-lg-6">
                                  <button   class="btn btn-primary btn-user btn-block">
                                        Guardar
                                 </button> 
                                </div>
                                <div class="col-lg-6">
                                    <a href="/office" class="btn btn-danger btn-user btn-block">
                                        Cancelar
                                    </a>

                                </div>

                                <hr>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>