<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Crear Oficina</h1>
                        </div>
                        <form class="user" action="/office/add" method="POST">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" name="names"
                                        placeholder="Nombre Oficina">
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" name="adress"
                                        placeholder="Dirección">
                                </div>
                            </div>
                            <div class="form-group ">
                                <select name="city_id" class="custom-select col-sm-12">
                                    {{#each office}}
                                    <option value="{{id}}">{{nombre}}</option>
                                    {{/each}}

                                </select>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <input type="text" class="form-control form-control-user" name="number_cel"
                                        id="number_cel" placeholder="Teléfono">
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control form-control-user" name="responsable"
                                        id="responsable" placeholder="Responsable">
                                </div>
                            </div>
                            <hr>
                            <div class="row">



                                <div class="col-lg-6">
                                    <a href="/office" class="btn btn-primary btn-user btn-block">
                                        Guardar
                                    </a>
                                </div>
                                <div class="col-lg-6">
                                    <a href="/office" class="btn btn-danger btn-user btn-block">
                                        Cancelar
                                    </a>

                                </div>

                                <hr>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>