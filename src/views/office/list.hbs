<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Adiministrar Oficinas</h6>
  </div>
  <div class="pt-3 pl-3">
    <a href="office/add" class="btn btn-success .btn-circle btn-sm mr-auto">
      <span class="icon text-white-50">
        <i class="fas fa-check"></i>
      </span>
      <span class="text">Adicionar</span>
    </a>
  </div>
    {{>message}}
  <div class="card-body">
    <div class="table-responsive">
      <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
          <tr>
            <th>Nombre Oficina</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Ciudad</th>
            <th>Responsable</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each office}}
          <tr>
            <td>{{names}}</td>
            <td>{{address}}</td>
            <td>{{number_cel}}</td>
            <td>{{nombre}}</td>
            <td>{{responsable}}</td>
            <td>
              <a href="#" class="btn btn-warning .btn-circle btn-sm">
                <span class="icon text-white-50">
                  <i class="fas fa-check"></i>
                </span>
                <span class="text"></span>
              </a>
              <!--a href="/links/delete/{{id}}" class="btn btn-danger">Delete</a-->

              <a href="/office/delete/{{id}}" class="btn btn-danger .btn-circle btn-sm">
                <span class="icon text-white-50">
                  <i class="fas fa-trash"></i>
                </span>
                <span class="text"></span>
              </a>
            </td>
          </tr>
          {{/each}}

        </tbody>
        <tfoot>
          <tr>
            <th>Nombre Oficina</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Ciudad</th>
            <th>Responsable</th>
            <th>Acciones</th>
          </tr>
        </tfoot>
      </table>

    </div>
  </div>
</div>