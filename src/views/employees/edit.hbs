<div class="container">
 {{>message}} 
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Editar Empleado!</h1>
                        </div>
                        <form class="user" action="/employees/edit/{{user.id}}" method="POST">

                            <div class="form-group row">
                                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" value="{{user.number_id}}"
                                        autofocus name="number_id" placeholder="Cédula" class="form-control" required>
                                </div>
                                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" value="{{user.username}}"
                                        name="username" placeholder="Usuario" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" value="{{user.name}}"
                                        name="name" placeholder="Nombres" class="form-control" required>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" value="{{user.lastname}}"
                                        name="lastname" placeholder="Apellidos" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" value="{{user.cellphone}}"
                                        name="cellphone" placeholder="Celular" class="form-control" required>
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" value="{{user.telephone}}"
                                        name="telephone" placeholder="Teléfono" class="form-control" required>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input type="text" class="form-control form-control-user" value="{{user.address}}"
                                        name="address" placeholder="Dirección" class="form-control" required>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-lg-6">
                                    <button class="btn btn-primary btn-user btn-block">
                                        Guardar
                                    </button>
                                </div>
                                <div class="col-lg-6">
                                    <a href="/employees" class="btn btn-danger btn-user btn-block">
                                        Cancelar
                                    </a>
                                </div>
                                <hr>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>