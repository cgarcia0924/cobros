<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Administrar Empleados!</h1>
  <a href="/employees/add">
    ->Crear Empleado
  </a>
  <p class="mb-4"></p>
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Empleados Registrados</h6>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table id="example" class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Id</th>
              <th>Identificación</th>
              <th>Usuario</th>
              <th>Nombres y Apellidos</th>
              <th>Dirección</th>
              <th>Teléfono</th>
              <th>Celular</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tfoot>
            <th>Id</th>
            <th>Identificación</th>
            <th>Usuario</th>
            <th>Nombres y Apellidos</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Celular</th>
            <th>Acciones</th>
            </tr>
          </tfoot>
          <tbody>
            {{#each users}}
            <tr>
              <td>{{id}}</td>
              <td>{{number_id}}</td>
              <td>{{username}}</td>
              <td>{{name}} {{lastname}}</td>
              <td>{{address}}</td>
              <td>{{telephone}}</td>
              <td>{{cellphone}}</td>
              <td>
                <a class="btn btn-warning btn-icon-split btn-sm" href="/employees/edit/{{users.id}}">
                  <span class="icon text-white-50"><i class="fas fa-flag"></i></span>
                  <span class="text">Editar</span>
                </a>

              </td>
            </tr>
            {{/each}}
          </tbody>

        </table>

      </div>
    </div>
  </div>
</div>