<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <p class="mb-4"></p> <!-- Margen Inicial  -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Adiministrar Tipo Gasto</h6>
    </div>
    <div class="pt-3 pl-3">
      <a href="/expense/add" class="btn btn-success .btn-circle btn-sm mr-auto">
        <span class="icon text-white-50">
          <i class="fas fa-check"></i>
        </span>
        <span class="text">Adicionar</span>
      </a>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
          <thead>
            <tr>

              <th>Descripción</th>
              <th>Tipo Gasto</th>
              <th>Tipo Operación</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each expense}}
            <tr>
              <td>{{description}}</td>
              <td>{{gasto}}</td>
              <td>{{operacion}}</td>
              <td>{{estado}}</td>
              <td>
                <a class="btn btn-primary btn-sm" type="button" href="javascript:ConfirmDemo({{id}})">
                  <span class="icon text-white-50 d-inline-block" tabindex="0" data-placement="top" title="Estado"><i
                      class="fas fa-flag" data-toggle="tooltip"></i></span>
                  <span class="text"> </span>
                </a>
              </td>
            </tr>
            {{/each}}

          </tbody>
          <tfoot>
            <tr>

              <th>Descripción</th>
              <th>Tipo Gasto</th>
              <th>Tipo Operación</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </tfoot>
        </table>

      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  function ConfirmDemo(id_list) {
    //Ingresamos un mensaje a mostrar
    var mensaje = confirm("¿Desea cambiar el estado para el gasto seleccionado?");
    //Detectamos si el usuario acepto el mensaje
    if (mensaje) {
     // alert("¡Gracias por aceptar!" + id_list + " ");
      window.location="/expense/estado/"+ id_list;
    }
    else {
      return;
    }
  }
</script>