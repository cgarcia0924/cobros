<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <p class="mb-4"></p> <!-- Margen Inicial  -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Adiministrar Tipo Gasto</h6>
    </div>
    <div class="pt-3 pl-3">
      <a href="/expense/add" class="btn btn-success .btn-circle btn-sm mr-auto">
        <span class="icon text-white-50">
          <i class="fas fa-check"></i>
        </span>
        <span class="text">Adicionar</span>
      </a>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table id="example" class="table table-striped table-bordered" style="width:100%">
          <thead>
            <tr>

              <th>Descripción</th>
              <th>Tipo Gasto</th>
              <th>Tipo Operación</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            {{#each expense}}
            <tr>
              <td>{{description}}</td>
              <td>{{gasto}}</td>
              <td>{{operacion}}</td>
              <td>{{estado}}</td>
              <td>
                <!--a class="btn btn-warning btn-sm" href="/expense/edit/{{id}}">
                  <span class="icon text-white-50"><i class="fas fa-check"></i></span>
                  <span class="text" class="d-inline-block" tabindex="0" data-placement="top" title="Editar"> </span>
                </a-->
                <!--a class="btn btn-primary btn-sm" href="/expense/estado/{{id}}">
                  <span class="icon text-white-50 d-inline-block" tabindex="0" data-placement="top" title="Estado"><i
                      class="fas fa-flag" data-toggle="tooltip"> </i> </span>
                  <span class="text"> </span>
                </a-->
                <div class="contenedor-modal">
                  <button type="button" id_p= "{{id}}" class="btn btn-primary btn-lsm fas fa-flag" data-toggle="modal"
                    data-target="#miModal">
                  </button>
                </div>
              </td>
            </tr>
            {{/each}}

          </tbody>
          <tfoot>
            <tr>

              <th>Descripción</th>
              <th>Tipo Gasto</th>
              <th>Tipo Operación</th>
              <th>Estado</th>
              <th>Acciones</th>
            </tr>
          </tfoot>
        </table>

      </div>
    </div>
  </div>
</div>

<div class="modal" id="miModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Alerta </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>¿Desea cambiar el estado para gasto seleccionado?</p>
      </div>
      <div class="modal-footer">
        <a href="/expense/estado/{{id}}" title="Estado" class="btn btn-primary">Guardar</a>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
      </div>
    </div>
  </div>
</div>