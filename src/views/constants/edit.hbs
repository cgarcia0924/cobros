<div class="container">
    {{>message}}
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Modificar Constante</h1>
                        </div>
                        <form class="user" action="/constants/edit/{{constants.id}}" method="POST">
                            <div class="form-group row">
                                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                    <label class="label label-default">Nombre:</label>
                                    <input type="text" class="form-control " name="name" value="{{constants.name}}"
                                        autofocus placeholder="" required>
                                </div>
                                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                    <label class="label label-default">Utilidad:</label>
                                    <input type="number" class="form-control " name="utility"
                                        value="{{constants.utility}}" autofocus placeholder="" required>
                                </div>
                                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                    <label class="label label-default">Plazo:</label>
                                    <input type="number" class="form-control " name="term" value="{{constants.term}}"
                                        autofocus placeholder="" required>
                                </div>
                                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                    <label class="label label-default">DÃ­as Clavo:</label>
                                    <input type="number" class="form-control " name="nailday"
                                        value="{{constants.nailday}}" autofocus placeholder="" required>
                                </div>
                                <div class="form-group col-sm-6 mb-3 mb-sm-0">
                                    <label for="exampleFormControlSelect1">Oficina:</label>
                                    <select class="form-control" name="office_id">                                   
                                        <option value="{{constants.office_id}}">{{constants.names}}</option>
                                        {{#each office}}
                                        <option value="{{id}}">{{names}}</option>
                                        {{/each}}
                                    </select>                                
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-lg-6">
                                    <button class="btn btn-primary btn-user btn-block">
                                        Guardar
                                    </button>
                                </div>
                                <div class="col-lg-6">
                                    <a href="/constants" class="btn btn-danger btn-user btn-block">
                                        Cancelar
                                    </a>
                                </div>
                                <hr>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>